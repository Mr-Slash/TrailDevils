<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			 android:orientation="vertical" 
			 android:layout_width="match_parent"
			 android:layout_height="match_parent">

	<!-- Image section -->
	<ImageView android:src="@drawable/trail_flims" 
			   android:layout_width="wrap_content"
			   android:layout_height="wrap_content"
			   android:layout_gravity="center"/>
			   
	<View android:layout_height="2dip" android:layout_width="match_parent" android:background="#FF909090" />
	
	<!-- State section -->
	<RelativeLayout android:id="@+id/statusLabelContainer"
					android:layout_width="match_parent"
				  	android:layout_height="wrap_content"
				  	android:background="#00FF00"
				  	android:padding="3dip">
				  
		<TextView android:text="@string/detailview_status"
				  android:layout_width="wrap_content" 
				  android:layout_height="wrap_content"
				  android:background="#FF0000"/>

		<TextView android:text="offen"
				  android:layout_width="wrap_content" 
				  android:layout_height="wrap_content"
				  android:background="#0000FF" 
				  android:layout_alignParentRight="true"/>
	</RelativeLayout>

	<TableLayout android:layout_width="match_parent" 
				 android:layout_height="wrap_content"
				 android:stretchColumns="1"
				 >
				 
		<TableRow>
			<TextView android:text="@string/detailview_status_weather_morning" android:padding="3dip" />
			<TextView android:text="@string/detailview_status_weather_rainy" android:padding="3dip" />
		</TableRow>

		<TableRow>
			<TextView android:text="@string/detailview_status_weather_afternoon" android:padding="3dip" />
			<TextView android:text="@string/detailview_status_weather_suny" android:padding="3dip" />
		</TableRow>
	</TableLayout>

	<View android:layout_height="2dip" android:layout_width="match_parent" android:background="#FF909090" />

	<!-- Opening hours -->
	<LinearLayout android:orientation="vertical"
				  android:layout_width="match_parent"
				  android:layout_height="wrap_content">
	
		<TextView android:layout_width="wrap_content" 
				  android:layout_height="wrap_content" 
				  android:text="@string/detailview_openinghours"/>

		<TextView android:layout_width="wrap_content" 
				  android:layout_height="wrap_content" 
				  android:text="10:00 - 12:00 Uhr"/>

		<TextView android:layout_width="wrap_content" 
				  android:layout_height="wrap_content" 
				  android:text="14:00 - 18:00 Uhr"/>
 	</LinearLayout>

	<View android:layout_height="2dip" android:layout_width="match_parent" android:background="#FF909090" />

	<!-- Opening hours -->
	<LinearLayout android:orientation="vertical"
				  android:layout_width="match_parent"
				  android:layout_height="wrap_content">
	
		<TextView android:layout_width="wrap_content" 
				  android:layout_height="wrap_content" 
				  android:text="@string/detailview_pricing"/>

		<TextView android:layout_width="wrap_content" 
				  android:layout_height="wrap_content" 
				  android:text="200.- CHF / h"/>
 	</LinearLayout>
	
	<!-- Map -->
	<com.google.android.maps.MapView
					 android:id="@+id/detailview_mapview"
					 android:clickable="true"
	                 android:layout_width="fill_parent"
	                 android:layout_height="fill_parent"
	                 android:apiKey="@string/map_api_key"
	                 />	
	
</LinearLayout>
